//Basic 1st program of recursion
#include <iostream>
using namespace std;
   void fun1(int n){
       if(n==0){
           return ;
       }
       fun1(n-1);
       cout<<n<<endl;
       fun1(n-1);
   }
int main() {
    int n;
    cout<<"the number is ";
    cin>>n;
    fun1(n);

    return 0;
}
////output is :
/*the number is 3
1
2
1
3
1
2
1*/
