//Basic 3rd program of recursion
#include <iostream>
using namespace std;
   int fun1(int n){
       if(n==1){
           return 0;
       }
       return {1+fun1(n/2)};
   }
int main() {
    int n;
    cout<<"the number is ";
    cin>>n;
    cout<<fun1(n);

    return 0;
}
////output is :
/*the number is 16
4*/
