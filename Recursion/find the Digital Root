//// find the DigitalRoot
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
 int nums(int n)
    {
        //Your code here
        if(n==0){
            return 0;
        }
        return ((nums(n/10))+(n%10));
    }
    int DigitalRoot(int n){
        int num=nums(n);
        int sum=0;
        while(num!=0){
            sum+=(num%10);
            num=num/10;
        }
        return sum;
    }
      

int main() {
    int n;
    cout<<"The number is ";
    cin>>n;
    cout<<DigitalRoot(n);
}
