// Print the sum of digit of given Number using Recursion
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
int sumofdig(int num){
  if(num==0){
      return 0;
  }  
  return (num%10)+sumofdig(num/10);
}
int main() {
    int n;
    cout<<"The number is ";
    cin>>n;
    cout<<sumofdig(n);
    return 0;
}
